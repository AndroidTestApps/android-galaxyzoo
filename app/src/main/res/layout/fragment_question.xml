<?xml version="1.0" encoding="utf-8"?>
<com.murrayc.galaxyzoo.app.ZooLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/table_detail"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textIsSelectable="true"
    tools:context="com.murrayc.galaxyzoo.app.QuestionFragment">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/standard_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:minLines="2" />

    <TableLayout
        android:id="@+id/layoutAnswers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
    </TableLayout>


</com.murrayc.galaxyzoo.app.ZooLinearLayout>
